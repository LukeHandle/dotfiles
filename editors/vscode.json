// Place your settings in this file to overwrite the default settings
{
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
    "terminal.external.linuxExec": "xfce4-terminal",
    "terminal.integrated.fontFamily": "'Hack NF', 'DejaVu Sans Mono', 'MesloLGS NF'",
    "workbench.colorTheme": "Solarized Dark",
    "editor.multiCursorModifier": "alt",
    "editor.rulers": [
        80,
        120
    ],
    "editor.bracketPairColorization.enabled": true,
    "editor.emptySelectionClipboard": false,
    "editor.insertSpaces": true,
    "extensions.ignoreRecommendations": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/.terraform": true,
        "**/*.retry": true
    },
    "files.associations": {
        "*.md.txt": "markdown"
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    "window.openFoldersInNewWindow": "on",
    "python.pythonPath": "~/.pyenv/versions/venv/bin/python",
    "python.defaultInterpreterPath": "~/.pyenv/versions/venv/bin/python",
    "python.venvPath": "~/.pyenv/",
    "go.useLanguageServer": true,
    "go.useCodeSnippetsOnFunctionSuggest": false,
    "go.enableCodeLens": {
        "runtest": true
    },
    "todohighlight.keywords": [
        "Todo"
    ],
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
    },
    "gitlens.historyExplorer.enabled": true,
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,
    "gitlens.codeLens.scopes": [
        "document"
    ],
    "gopls": {
        "ui.diagnostic.analyses": {
            "fieldalignment": true
        }
    },
    "plantuml.server": "http://localhost:8080",
    "plantuml.render": "PlantUMLServer",
}
